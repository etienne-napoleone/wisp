{
  "name": "wisp",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "bunx tsc --noEmit",
    "prettier:w": "prettier -w './**/*.{ts,tsx}'"
  },
  "private": true,
  "dependencies": {
    "effect": "^3.19.18"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/bun": "latest",
    "prettier": "^3.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "prettier": {
    "printWidth": 120,
    "importOrder": [
      "^@/(.*)$",
      "^.[.]?/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ]
  },
  "module": "index.ts",
  "type": "module"
}
